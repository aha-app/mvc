{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "preserve",
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "dist",
    "skipLibCheck": true,
    "module": "AMD",
    "moduleResolution": "node",
    "target": "ES2018",
    "sourceMap": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"]
  },
  "include": ["src/**/*"]
}
